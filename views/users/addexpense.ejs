<%- include("../res/head.ejs") %> 
</head>
<body>
    <%- include("../res/nav.ejs") %>
    <div class="container">
        <div class="row">
            <div class="col-sm-4">

            </div>
            <div class="col-sm-4" style="border: 1px solid lightgrey;border-radius: 5px;">
                <h3>Add Expense or Income</h3>
                <div>
                    <form action="/profile/add" method="POST" style="margin-bottom: 20px;">
                        <div class="form-group">
                            <% 
                            if(error!="") {
                                %>
                                <div class="alert alert-danger alert-dismissible">
                                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                    <strong>Alert!</strong> <%=error%>
                                </div><%             
                            }

                            if(success!="") {
                                %>
                                <div class="alert alert-success alert-dismissible">
                                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                    <strong>Sucess!</strong> <%=success%>
                                </div>
                                <%
                            }

                            %> 
                        </div>
                        <div class="form-group">
                            <label for="title">Expense Title : </label>
                            <input type="text" name="title" id="title" placeholder="Title for the expense" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="desc">Description : </label>
                            <textarea name="desc" id="" cols="30" rows="5" class="form-control" style="resize: none;" placeholder="A brief description about your expense."></textarea>
                        </div>
                        <div class="form-group">
                            <label for="amount">Amount  : </label>
                            <input type="number" name="amount" id="amount" class="form-control" placeholder="Amount spent in digits">
                        </div>
                        <div class="form-group">
                            <label for="type">Expense Type : </label>
                            <select name="type" id="type" class="form-control">
                                <option value="credit">Credit</option>
                                <option value="debit">Debit</option>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label for="date">Date : </label>
                            <input type="date" name="date" id="date" class="form-control">
                            <input type="hidden" name="_csrf" value=<%=csrfToken%>>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-info" style="width: 100%;">ADD EXPENSE</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-sm-4">
                
            </div>
        </div>
    </div>
</body>